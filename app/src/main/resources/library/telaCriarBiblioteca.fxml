<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.BorderPane?>



<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="library.TelaCriarBibliotecaController">

  <center>
    <VBox alignment="CENTER" spacing="20" maxWidth="400" BorderPane.alignment="CENTER">
      <Label text="Digite o nome da biblioteca">
        <font>
          <Font size="28"/>
        </font>
      </Label>

      <TextField fx:id="campoNomeBiblioteca" prefWidth="300"/>

      <Button fx:id="botaoCriarBiblioteca"
              text="Criar"
              onAction="#avancarParaLogin"
              prefWidth="150"/>
      </VBox>
    </center>

</BorderPane>



